{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",

    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["vite/client", "node"]
  },
  "include": ["src"]
}
